@model PawsitiveCare.Pet

@{
    ViewBag.Title = "Details";
}

<div class="outer">
    <div class="overlay">
        <div class="inner">
            <div class="panel panel-default" id="homePanel">
                <div class="panel-body">
                    <div class="col-md-12">
                        <h2>@Html.DisplayFor(model => model.PetName)</h2>
                        </div>
                    <div class="row">
                        <div class="col-md-3">
                            <img src=" @Html.DisplayFor(model => model.PetPhoto)" class="petDetailsPhoto"><br /><br /><br />
                            <p>@Html.DisplayFor(model => model.BirthDate)</p>
                            <p>@Html.DisplayFor(model => model.PetType)</p>
                            <p>Fixed? @Html.DisplayFor(model => model.IsFixed)</p>
                            <p>
                                @Html.ActionLink("Edit", "Edit", new { id = Model.PetID }) |
                                @Html.ActionLink("Back to List", "Index")
                            </p>
                        </div>
                        <div class="col-md-7">
                            <h3>Weights</h3>
                            @Html.ActionLink("View More", "Index", "Weights", new { id = Model.PetID }, new { })
                            @Html.ActionLink("Add Weight", "Create", "Weights", new { id = Model.PetID }, new { })
                            <hr />
                            <h3>Surgeries</h3>
                            @Html.ActionLink("View More", "Index", "Surgeries", new { id = Model.PetID }, new { })
                            @Html.ActionLink("Add Surgery", "Create", "Surgeries", new { id = Model.PetID }, new { })
                            <hr />
                            <h3>Documents</h3>
                            @Html.ActionLink("View More", "Index", "Documents", new { id = Model.PetID }, new { })
                            @Html.ActionLink("Add Document", "Create", "Documents", new { id = Model.PetID }, new { })
                            <hr />
                            <h3>Visits</h3>
                            @Html.ActionLink("View More", "Index", "Visits", new { id = Model.PetID }, new { })
                            @Html.ActionLink("Add Visit", "Create", "Visits", new { id = Model.PetID }, new { })
                        </div>

                </div>
                    </div>
                </div>
</div>
        </div>  

