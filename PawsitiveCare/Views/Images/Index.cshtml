@model IEnumerable<PawsitiveCare.Image>

@{
    ViewBag.Title = "Index";
}


<div class="outer">
    <div class="overlay"></div>
    <div class="inner">
        <div class="panel panel-default" id="indexPanel">
            <div class="panel-body">
                <h2>Index</h2>

                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ImageTitle)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ImagePath)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Pet.PetName)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ImageTitle)
                            </td>
                            <td>
                                @*<img src="https://localhost:44306/Image/Apple_Jacks__34438.1440623833.500.750185624027.png" />*@
                                <img src="@Html.DisplayFor(modelItem => item.ImagePath)"/>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Pet.PetName)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ImageID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ImageID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ImageID })
                            </td>
                        </tr>
                    }

                </table>
                </div>
            </div>
        </div>
    </div>
