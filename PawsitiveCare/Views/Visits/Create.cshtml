@model PawsitiveCare.Visit

@{
    ViewBag.Title = "Create";
}

<div class="outer">
    <div class="overlay"></div>
    <div class="inner">
        <div class="panel panel-default" id="homePanel">
            <div class="panel-body">


                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h2>Add Clinic Visit</h2>
                        <hr />
                        <div class="form-group">
                            @*@Html.LabelFor(model => model.PetID, "PetID", htmlAttributes: new { @class = "control-label col-md-2" })*@
                            <div class="col-md-10">
                                @Html.DropDownList("PetID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.PetID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @*@Html.LabelFor(model => model.ClinicName, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            <p>Clinic Name</p>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ClinicName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ClinicName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @*@Html.LabelFor(model => model.VisitDate, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            <p>Visit Date</p>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.VisitDate, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.VisitDate, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @*@Html.LabelFor(model => model.VisitDescription, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            <p>Description of Visit</p>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.VisitDescription, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.VisitDescription, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @*@Html.LabelFor(model => model.VisitCost, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            <p>Visit Cost</p>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.VisitCost, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.VisitCost, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }

                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
            </div>
        </div>
    </div>
</div>
