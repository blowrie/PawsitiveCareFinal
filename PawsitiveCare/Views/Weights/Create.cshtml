@model PawsitiveCare.Weight
@{
    ViewBag.Title = "Create";
}
<div class="outer">
    <div class="overlay"></div>
    <div class="inner">
        <div class="panel panel-default" id="homePanel">
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <h2>Add Weight</h2>
                        <hr />
                        <div class="form-group">
                            @*@Html.LabelFor(model => model.PetID, "PetID", htmlAttributes: new { @class = "control-label col-md-2" })*@
                            @{
                                <div class="col-md-10">
                                    <h1>@Model.Pet.PetName</h1>
                                    @Html.Hidden("PetID", @Model.PetID)
                                </div>
                            }

                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @*@Html.LabelFor(model => model.Weight1, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            <p>Weight</p>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Weight1, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Weight1, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @*@Html.LabelFor(model => model.WeightDate, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            <p>Date weight was taken</p>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.WeightDate, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.WeightDate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>
                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
            </div>
        </div>
    </div>
</div>